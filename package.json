{
    "name": "volte",
    "version": "0.0.0",
    "description": "Robust, simple replacement for npm publish",
    "license": "MIT",
    "source": "src/index.js",
    "main": "dist/volte.js",
    "scripts": {
        "test": "run-s test:*",
        "test:coverage": "run-s test:unit:coverage",
        "test:unit": "jest",
        "test:e2e": "node -r @babel/register ./e2e/e2e.test.js",
        "test:unit:coverage": "run-s 'test:unit -- --coverage --watchAll=false'",
        "verdaccio:demo": "verdaccio --config ./verdaccio-configs/demo.config.json",
        "verdaccio:e2e": "verdaccio --config ./verdaccio-configs/e2e.config.json",
        "build": "run-s build:*",
        "build:clean": "rimraf dist",
        "build:bundle": "microbundle --no-compress --format cjs --target node --no-sourcemap"
    },
    "bin": {
        "volte": "bin/volte.js"
    },
    "author": {
        "name": "Piyush Lodaya",
        "email": "ppiyush13@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ppiyush13/volte.git"
    },
    "bugs": {
        "url": "https://github.com/ppiyush13/volte/issues"
    },
    "dependencies": {
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "chai": "^4.3.4",
        "commander": "^7.1.0",
        "escape-string-regexp": "^1.0.5",
        "got": "^11.8.2",
        "registry-url": "^5.1.0",
        "semver": "^7.3.4",
        "shelljs": "^0.8.4"
    },
    "devDependencies": {
        "@babel/code-frame": "^7.12.13",
        "@babel/core": "^7.13.10",
        "@babel/preset-env": "^7.13.12",
        "@babel/register": "^7.13.8",
        "app-root-path": "^3.0.0",
        "babel-jest": "^26.6.3",
        "chalk": "^2.4.2",
        "delay": "^5.0.0",
        "expect": "^26.6.2",
        "get-bin-path": "^5.1.0",
        "indent-string": "^4.0.0",
        "jest": "^26.6.3",
        "jest-dev-server": "^4.4.0",
        "jest-mock-console": "^1.0.1",
        "jest-mock-process": "^1.4.0",
        "microbundle": "^0.13.0",
        "mocked-env": "^1.3.2",
        "nock": "^13.0.11",
        "npm-cli-login": "^0.1.1",
        "npm-run-all": "^4.1.5",
        "pretty-ms": "^7.0.1",
        "rimraf": "^3.0.2",
        "runfork": "^3.1.55",
        "stack-utils": "^2.0.3",
        "tick-promise": "^1.0.0",
        "verdaccio": "^4.11.3",
        "verdaccio-auth-memory": "^9.7.2",
        "verdaccio-memory": "^9.7.2"
    }
}
